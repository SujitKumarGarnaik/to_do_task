<h1>Task List</h1>

<%= link_to "Create New Task", new_task_path %> | 
<%= flash[:notice] %>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Complete</th>
      <th>Due Date</th>
      <th>Action1</th>
      <th>Action2</th>
      <th>Action3</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.complete ? "Completed" : "Incomplete" %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to "Edit", edit_task_path(task) %></td>
        <td><%= link_to "Show", task_path(task) %></td>
        <td><%= link_to "Delete", task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
